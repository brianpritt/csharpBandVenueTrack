<!DOCTYPE html>
@{
  Layout="Shared/_Layout.cshtml";
}

  <div class="container">
      <h1>Band Tracker</h1>
      <hr>
      <h2>Add a Venue @Model["band"].GetName() had played at:</h2>
      <form action="/add/band/@Model["band"].GetId()/venue" method="post">
        <select class="form-control" name = "venue_id">
          @foreach(var listItem in Model["venues"])
          {
            <option value="@listItem.GetId()">@listItem.GetName()</option>
          }
        </select>
        <button class ="btn btn-info"type="submit" name="button">Add Venue</button>
    </form>
      <hr>

      <h5><a href="/">Home</a></h5>
      <h5><a href="/add/venue">Add/View Venues</a></h5>
    </div>
