<!DOCTYPE html>
@{
  Layout="Shared/_Layout.cshtml";
}

  <div class="container">
      <h1>Band Tracker</h1>
      <hr>
      <h2>Current Bands</h2>
      @foreach(var band in Model)
      {
        <li><a href="/band/@band.GetId()">@band.GetName()</a></li>
      }
      <hr>
      <h2>Add Band</h2>
      <form  action="/add/band" method="post">
        <input type="text" name="band-name" required placeholder="Band Name" class="form-control">
        <input type="text" name="contact" required placeholder="Contact Info" class="form-control">
        <button type="submit" name="button" class="btn btn-info">Add Band</button>
      </form>
      <h5><a href="/">Home</a></h5>
      <h5><a href="/add/venue">Add/View Venues</a></h5>
    </div>
